{
    "compilerOptions": {
        "target": "esnext",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "jsx": "react",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "strict": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "baseUrl": ".",
        "declaration": true,
        "declarationMap": true,
        "composite": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "paths": {
            // "@/*": ["./src/*"],
            // "@design-system/*": ["./node_modules/@scottish-government/design-system/src/*"],
        },
        "typeRoots": [
            "./node_modules/@types",
            "./@types"
        ],
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "./src",
        "./@types",
        // "**/*.tsx",
        // "**/*.ts",
        ".next/types/**/*.ts",
        "global.ts"
    ],
    "exclude": [
        "node_modules",
        "./src/**/*.spec.ts",
        "./dist",
        "./tests",
        "./playwright",
        "./playwright.config.ts",
        "./playwright-ct.config.ts"
    ]
}
