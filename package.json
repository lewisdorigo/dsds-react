    "repository": {
        "type": "git",
        "url": "https://github.com/lewisdorigo/dsds-react"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "lint": "eslint @types/**/* src/**/*",
        "type-check": "tsc --skipLibCheck --noEmit",
        "test": "playwright test -c playwright.config.ts",
        "build": "tsc",
        "pre-commit": "npm run lint && npm run type-check && npm run test",
        "postinstall": "npm run build",
        "set-hooks": "git config core.hooksPath ./.githooks && chmod -f 755 ./.githooks/*"
    },
    "dependencies": {
        "html-react-parser": "^5.1.12"
    },
    "peerDependencies": {
        "@scottish-government/design-system": "^2.0.0",
        "@types/node": "^20.2.5",
        "@types/react": "^18.2.8",
        "@types/react-dom": "^18.2.4",
        "next": "^14.0.0",
        "react": "^18.0.0",
        "react-dom": "^18.2.0",
        "typescript": "^5.0.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.0.0",
        "@commitlint/config-conventional": "^19.0.0",
        "@playwright/experimental-ct-react": "^1.45.2",
        "@playwright/test": "^1.45.2",
        "@types/node": "^20.14.11",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "eslint": "^8.0.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-next": "^14.0.0",
